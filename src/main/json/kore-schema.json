{
    "type": "object",

    "properties": {
        "format": {
            "type": "string",
            "enum": [ "KORE" ]
        },
        "version": {
            "type": "string",
            "enum": [ "1" ]
        }
    },
    "required": [
        "format",
        "version"
    ],

    "oneOf": [
        {
            "properties": {
                "term": { "$ref": "#/definitions/KorePattern" }
            },
            "required": [ "term" ]
        }
    ],

    "definitions": {
        "KorePattern": {
            "type": "object",

            "properties": {
                "tag": {
                    "type": "string",
                    "enum": [ "EVar", "SVar", "App", "String",
                              "Top", "Bottom", "Not", "And", "Or", "Implies", "Iff",
                              "Forall", "Exists",
                              "Mu", "Nu",
                              "Ceil", "Floor", "Equals", "In",
                              "Next", "Rewrites",
                              "DV",
                              "MultiOr", "MultiApp"
                            ]
                }
            },
            "required": ["tag"],

            "allOf": [
                {
                    "if": {"properties": {"tag": { "const": "EVar" } } },
                    "then": { "$ref": "#/definitions/KoreJSONEVar" }
                },
                {
                    "if": {"properties": {"tag": { "const": "SVar" } } },
                    "then": { "$ref": "#/definitions/KoreJSONSVar" }
                },
                {
                    "if": {"properties": {"tag": { "const": "App" } } },
                    "then": { "$ref": "#/definitions/KoreJSONApp" }
                },
                {
                    "if": {"properties": {"tag": { "const": "String" } } },
                    "then": { "$ref": "#/definitions/KoreJSONString" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Top" } } },
                    "then": { "$ref": "#/definitions/KoreJSONConnective0" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Bottom" } } },
                    "then": { "$ref": "#/definitions/KoreJSONConnective0" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Not" } } },
                    "then": { "$ref": "#/definitions/KoreJSONConnective1" }
                },
                {
                    "if": {"properties": {"tag": { "const": "And" } } },
                    "then": { "$ref": "#/definitions/KoreJSONConnective2" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Or" } } },
                    "then": { "$ref": "#/definitions/KoreJSONConnective2" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Implies" } } },
                    "then": { "$ref": "#/definitions/KoreJSONConnective2" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Iff" } } },
                    "then": { "$ref": "#/definitions/KoreJSONConnective2" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Forall" } } },
                    "then": { "$ref": "#/definitions/KoreJSONQuantifier" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Exists" } } },
                    "then": { "$ref": "#/definitions/KoreJSONQuantifier" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Mu" } } },
                    "then": { "$ref": "#/definitions/KoreJSONFixpoint" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Nu" } } },
                    "then": { "$ref": "#/definitions/KoreJSONFixpoint" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Ceil" } } },
                    "then": { "$ref": "#/definitions/KoreJSONPredicate1" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Floor" } } },
                    "then": { "$ref": "#/definitions/KoreJSONPredicate1" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Equals" } } },
                    "then": { "$ref": "#/definitions/KoreJSONPredicate2" }
                },
                {
                    "if": {"properties": {"tag": { "const": "In" } } },
                    "then": { "$ref": "#/definitions/KoreJSONPredicate2" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Next" } } },
                    "then": { "$ref": "#/definitions/KoreJSONNext" }
                },
                {
                    "if": {"properties": {"tag": { "const": "Rewrites" } } },
                    "then": { "$ref": "#/definitions/KoreJSONRewrites" }
                },
                {
                    "if": {"properties": {"tag": { "const": "DV" } } },
                    "then": { "$ref": "#/definitions/KoreJSONDV" }
                },
                {
                    "if": {"properties": {"tag": { "const": "MultiOr" } } },
                    "then": { "$ref": "#/definitions/KoreJSONMultiOr" }
                },
                {
                    "if": {"properties": {"tag": { "const": "MultiApp" } } },
                    "then": { "$ref": "#/definitions/KoreJSONMultiApp" }
                }
            ]
        },
        "KoreJSONId": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9-']*$"
        },
        "KoreJSONSetId": {
            "type": "string",
            "pattern": "^@[a-zA-Z][a-zA-Z0-9-']*$"
        },

        "KoreJSONEVar": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/KoreJSONId"
                },
                "sort": {
                    "$ref": "#/definitions/Sort"
                }
            },
            "required": [
                "name",
                "sort"
            ]
        },

        "KoreJSONSVar": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/KoreJSONSetId"
                },
                "sort": {
                    "$ref": "#/definitions/Sort"
                }
            },
            "required": [
                "name",
                "sort"
            ]
        },

        "KoreJSONApp": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^\\\\?[a-zA-Z][a-zA-Z0-9-']*$"
                },
                "sorts": {
                    "type": "array",
                    "items": {
	                    "$ref": "#/definitions/Sort"
                    }
                },
                "args": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/KorePattern"
                    }
                }
            },
            "required": [
                "name",
                "sorts",
                "args"
            ]
        },

        "KoreJSONString": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "string"
                }
            },
            "required": [
                "value"
            ]
        },

        "KoreJSONConnective0": {
            "type": "object",
            "properties": {
                "sort": {
                    "$ref": "#/definitions/Sort"
                }
            },
            "required": [
                "sort"
            ]
        },

        "KoreJSONConnective1": {
            "type": "object",
            "properties": {
                "sort": {
                    "$ref": "#/definitions/Sort"
                },
                "arg": {
                    "$ref": "#/definitions/KorePattern"
                }
            },
            "required": [
                "sort",
                "arg"
            ]
        },

        "KoreJSONConnective2": {
            "type": "object",
            "properties": {
                "sort": {
                    "$ref": "#/definitions/Sort"
                },
                "first": {
                    "$ref": "#/definitions/KorePattern"
                },
                "second": {
                    "$ref": "#/definitions/KorePattern"
                }
            },
            "required": [
                "sort",
                "first",
                "second"
            ]
        },

        "KoreJSONQuantifier": {
            "type": "object",
            "properties": {
                "sort": {
                    "$ref": "#/definitions/Sort"
                },
                "var": {
                    "$ref": "#/definitions/KoreJSONId"
                },
                "varSort": {
                    "$ref": "#/definitions/Sort"
                },
                "arg": {
                    "$ref": "#/definitions/KorePattern"
                }
            },
            "required": [
                "sort",
                "var",
                "varSort",
                "arg"
            ]
        },

        "KoreJSONFixpoint": {
            "type": "object",
            "properties": {
                "var": {
                    "$ref": "#/definitions/KoreJSONSetId"
                },
                "varSort": {
                    "$ref": "#/definitions/Sort"
                },
                "arg": {
                    "$ref": "#/definitions/KorePattern"
                }
            },
            "required": [
                "var",
                "varSort",
                "arg"
            ]
        },

        "KoreJSONPredicate1": {
            "type": "object",
            "properties": {
                "argSort": {
                    "$ref": "#/definitions/Sort"
                },
                "sort": {
                    "$ref": "#/definitions/Sort"
                },
                "arg": {
                    "$ref": "#/definitions/KorePattern"
                }
            },
            "required": [
                "argSort",
                "sort",
                "arg"
            ]
        },


        "KoreJSONPredicate2": {
            "type": "object",
            "properties": {
                "argSort": {
                    "$ref": "#/definitions/Sort"
                },
                "sort": {
                    "$ref": "#/definitions/Sort"
                },
                "first": {
                    "$ref": "#/definitions/KorePattern"
                },
                "second": {
                    "$ref": "#/definitions/KorePattern"
                }
            },
            "required": [
                "argSort",
                "sort",
                "first",
                "second"
            ]
        },

        "KoreJSONNext": {
            "type": "object",
            "properties": {
                "sort": {
                    "$ref": "#/definitions/Sort"
                },
                "dest": {
                    "$ref": "#/definitions/KorePattern"
                }
            },
            "required": [
                "sort",
                "dest"
            ]
        },

        "KoreJSONRewrites": {
            "type": "object",
            "properties": {
                "sort": {
                    "$ref": "#/definitions/Sort"
                },
                "source": {
                    "$ref": "#/definitions/KorePattern"
                },
                "dest": {
                    "$ref": "#/definitions/KorePattern"
                }
            },
            "required": [
                "sort",
                "source",
                "dest"
            ]
        },

        "KoreJSONDV": {
            "type": "object",
            "properties": {
                "sort": {
                    "$ref": "#/definitions/Sort"
                },
                "value": {
                    "type": "string"
                }
            },
            "required": [
                "sort",
                "value"
            ]
        },

        "KoreJSONMultiOr": {
            "type": "object",
            "properties": {
                "assoc": {
                    "type": "string",
                    "enum": [ "Left", "Right" ]
                },
                "sort": {
                    "$ref": "#/definitions/Sort"
                },
                "argss": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/KorePattern"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "assoc",
                "sort",
                "argss"
            ]
        },

        "KoreJSONMultiApp": {
            "type": "object",
            "properties": {
                "assoc": {
                    "type": "string",
                    "enum": [ "Left", "Right" ]
                },
                "symbol": {
                    "type": "string",
                    "pattern": "^\\\\?[a-zA-Z][a-zA-Z0-9-']*$"

                },
                "sorts": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Sort"
                    }
                },
                "argss": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/KorePattern"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "assoc",
                "symbol",
                "sorts",
                "argss"
            ]
        },

        "Sort": {
            "type": "object",
            "properties": {
                "tag": {
                    "type": "string",
                    "enum": [ "SortApp", "SortVar" ]
                }
            },
            "required": [ "tag" ],

            "allOf": [
                {
                    "if": { "properties": { "tag": { "const": "SortApp" } } },
                    "then": { "$ref": "#/definitions/SortApp" }
                },
                {
                    "if": { "properties": { "tag": { "const": "SortVar" } } },
                    "then": { "$ref": "#/definitions/SortVar" }
                }
            ]
        },

        "SortApp": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/KoreJSONId"
                },
                "args": {
                    "type": "array",
                    "items": {
	                    "$ref": "#/definitions/Sort"
                    }
                }
            },
            "required": [
                "name",
                "args"
            ]
        },

        "SortVar": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/KoreJSONId"
                }
            },
            "required": [ "name" ]
        }
    }
}
